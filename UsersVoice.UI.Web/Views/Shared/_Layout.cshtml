<!DOCTYPE html>
<html>
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/libraries")
    @Scripts.Render("~/bundles/app")
    @*@Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-route.js")

    @Scripts.Render("~/app/app.js")
    @Scripts.Render("~/app/directives/user-avatar.js")
    @Scripts.Render("~/app/services/UsersService.js")
    @Scripts.Render("~/app/services/AreasService.js")
    @Scripts.Render("~/app/services/IdeasService.js")
    @Scripts.Render("~/app/services/IdeaCommentsService.js")
    @Scripts.Render("~/app/services/LoginService.js")
    @Scripts.Render("~/app/services/VotingService.js")
    @Scripts.Render("~/app/UsernameController.js")
    @Scripts.Render("~/app/LoginController.js")*@
</head>
<body ng-app="userVoice">
    <div class="navbar navbar-inverse navbar-fixed-top bottom20">
        <div class="container">
            <div class="navbar-brand appTitle">
                <img src="~/Content/images/dell-logo-png-wallpaper-3.jpg" />
                <a href="/#/">Use Your Voice!</a>
            </div>

            <div ng-controller="UsernameController" class="navbar-right">
                <a class="navbar-brand" href="/#/login" ng-show="!isLogged()">Log in</a>
                <a class="navbar-brand" ng-show="isLogged()"> welcome {{username}}! - You have {{points}} votes available</a>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div ng-view></div>
        <hr />
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
