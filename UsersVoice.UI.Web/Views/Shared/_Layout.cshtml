<!DOCTYPE html>
<html>
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body ng-app="userVoice">
    <div class="navbar navbar-inverse navbar-fixed-top bottom20">
        <div class="container">
            <div class="navbar-brand appTitle">
                <img src="~/Content/images/dell-logo.jpg" />
                <a href="/#/">Use Your Voice!</a>
            </div>

            <div ng-controller="UsernameController" class="navbar-right">
                <a class="navbar-brand" href="/#/login" ng-show="!isLogged()">Log in</a>
                <a class="navbar-brand" ng-show="isLogged()"> welcome {{username}}! - You have {{points}} votes available</a>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div ng-view></div>
        <hr />
    </div>

    @Scripts.Render("~/bundles/libraries")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
